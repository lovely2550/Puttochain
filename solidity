pragma solidity ^0.8.20;

/**
 * @title KarmaToken
 * @dev ERC20 token representing digital merit (Karma) in Putthochain.
 * Users gain Karma for good actions recorded on-chain.
 */
import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/access/Ownable.sol";

contract KarmaToken is ERC20, Ownable {
    constructor() ERC20("Karma Token", "KARMA") Ownable(msg.sender) {
        _mint(msg.sender, 1000000 * 10 ** decimals()); // initial supply
    }

    /**
     * @notice Mint new Karma tokens to reward good deeds.
     * @param to Address of recipient.
     * @param amount Number of tokens to mint.
     */
    function mintKarma(address to, uint256 amount) external onlyOwner {
        _mint(to, amount);
    }

    /**
     * @notice Burn Karma tokens (for bad karma or balance correction).
     * @param from Address of the holder.
     * @param amount Number of tokens to burn.
     */
    function burnKarma(address from, uint256 amount) external onlyOwner {
        _burn(from, amount);
    }
}